<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.example.jredu.MainActivity_zc">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f18302">

        <RelativeLayout
            android:id="@+id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_bg">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/back_icon"
                android:layout_toRightOf="@+id/back_icon"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/uNameContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_edit_background"
                android:hint="用户名"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uPwdContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uNameContainer"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/userPwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_edit_background"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uNickContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uPwdContainer"

            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/userNick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_edit_background"
                android:hint="昵称"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/usexContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uNickContainer"

            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/usersex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_edit_background"
                android:hint="性别"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textSize="14dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_zc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/usexContainer"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="16dp" />

    </RelativeLayout>


</RelativeLayout>
